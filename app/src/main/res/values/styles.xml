<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WelcomeText">
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">0.5</item>
    </style>

    <style name="WelcomeText.Main">
        <item name="fontFamily">@font/sf_ui_display_regular</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="WelcomeText.Addition">
        <item name="fontFamily">@font/sf_ui_display_light</item>
        <item name="android:textSize">16.9sp</item>
    </style>

    <style name="InputText">
        <item name="fontFamily">@font/sf_ui_display_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_input</item>
        <item name="android:textColorHint">@color/text_input</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

</resources>
